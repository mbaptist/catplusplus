CXX = g++ -g -O2

########################################################################

INCLUDE = -I..

OBJECTS = random.o

########################################################################


###########################################################
# No modification should be necessary from thin point on
###########################################################

all: $(OBJECTS)

%.o: %.C *.h
	$(CXX) $(INCLUDE) -c $<

clean:
	@rm -rfv *~ *.o

