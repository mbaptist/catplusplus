##########################################################
# Modify this section to suit your system's needs
##########################################################

CXX = @CXX@ @CFLAGS@

###########################################################
# No modification should be necessary from thin point on
###########################################################

INSTALL_LIST = cat*.h cat*.C

INSTALL_ROOT = @prefix@

all:

clean:
	@rm -fv *~ *.o testcat

test: testcat

testcat: testcat.o
	$(CXX) -g -o testcat testcat.o

testcat.o: testcat.C *.h
	$(CXX) -g -c testcat.C

install:
	install -c -m 644 $(INSTALL_LIST) $(INSTALL_ROOT)/include

uninstall:
	cd $(INSTALL_ROOT) && @rm -rfv $(INSTALL_LIST)

